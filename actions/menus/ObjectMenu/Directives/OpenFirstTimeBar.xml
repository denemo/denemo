<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ClosingBarline</after>
        <action>OpenFirstTimeBar</action>
        <scheme>;;;OpenFirstTimeBar
(d-Directive-standalone "Volta")
(d-DirectivePut-standalone-minpixels  "Volta" 50)
(d-DirectivePut-standalone-postfix "Volta" "
\\set Score.repeatCommands = #'((volta \"1\"))
")
(d-DirectivePut-standalone-gx  "Volta" 37)
(d-DirectivePut-standalone-gy  "Volta" -34)
(d-DirectivePut-standalone-graphic "Volta" "FirstTimeBar")
(d-MoveCursorRight)
(d-RefreshDisplay)
 </scheme>
        <_label>Start a First Time Bar</_label>
        <_tooltip>(Print) start a first time bar, must be followed by EndVolta.</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
