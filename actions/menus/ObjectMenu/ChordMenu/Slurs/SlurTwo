<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>SlurTwo</action>
        <scheme>;;;SlurTwo
(if (Music?)
(begin
	(d-ToggleBeginSlur)
	(if (d-NextChord)
		(d-ToggleEndSlur)
		(d-ToggleBeginSlur))
	(d-NextChord)))
</scheme>
        <label>Slur with Next Note</label>
        <tooltip>Creates a slur from current note to next note.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
